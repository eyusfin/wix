<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>WixToolset.Util</RootNamespace>
    <Description>WiX Toolset Utility extension</Description>
    <Title>WiX Toolset Utility extension</Title>
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\wixlib\util.wixproj"
                      OutputItemType="EmbeddedResource"
                      ReferenceOutputAssembly="false"
                      SkipGetTargetFrameworkProperties="true"
                      />
    <EmbeddedResource Include="$(OutputPath)..\util.wixlib" Condition=" '$(NCrunch)'=='1' " />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="WixToolset.Extensibility" PrivateAssets="all" />
  </ItemGroup>
</Project>
